{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run game",
            "type": "f5anything",
            "request": "launch",
            "command": "godot --path ${workspaceFolder}"
        },
        {
            "name": "Debug game",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "port": 6007,
            "address": "127.0.0.1",
        },
        {
            "name": "Run gdUnit4 tests (Linux/macOS)",
            "type": "f5anything",
            "request": "launch",
            "command": "GODOT_BIN=godot ./addons/gdUnit4/runtest.sh -a ${workspaceFolder}/test/unit/"
        },
        {
            "name": "Run gdUnit4 tests (Windows)",
            "type": "f5anything",
            "request": "launch",
            "command": "GODOT_BIN=godot ./addons/gdUnit4/runtest.bat -a ${workspaceFolder}/test/unit/"
        }
    ]
}